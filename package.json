{
  "name": "task-manager",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@types/react": "^15.0.9",
    "@types/react-redux": "^4.4.36",
    "@types/react-router": "^3.0.3",
    "@types/redux": "^3.6.0",
    "@types/redux-logger": "^2.6.34",
    "@types/redux-thunk": "^2.1.0",
    "react-scripts": "0.9.0"
  },
  "proxy": "http://localhost:9201",
  "dependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "redux": "^3.6.0",
    "redux-logger": "^2.8.1",
    "redux-thunk": "^2.2.0",
    "uuid": "^3.0.1"
  },
  "scripts": {
    "start:client": "cd frontend && react-scripts start",
    "start:server": "cd backend && node server",
    "start": "yarn start:server && yarn start:client",

    "start:production": "cd deploy && node server",

    "build:client": "cd frontend && react-scripts build",
    "build:server": "cd backend && tsc",
    "build": "yarn build:client && yarn build:server",
    
    "test:client": "cd frontend && react-scripts test --env=jsdom",
    "test:server": "cd backend && mocha",
    "test": "yarn test:client && yarn test:server",

    "deploy": "yarn build && cp -r frontend/build deploy/static && cp backend/server.js deploy/server.js",
    "docker": "docker build -t task-manager .",
    
    "eject": "cd frontend && react-scripts eject"
  }
}
